<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="emp">

	<select id="all" resultType="mybatis.vo.EmpVO">
		SELECT *
		FROM `emp`
	</select>
	
	<select id="search" parameterType="Map" resultType="mybatis.vo.EmpVO">
		SELECT *
		FROM `emp`
		<choose>
			<when test="searchType == 1">WHERE empno = #{searchValue}</when>
			<when test="searchType == 2">WHERE ename LIKE CONCAT('%',#{searchValue},'%')</when>
			<when test="searchType == 3">WHERE deptno = #{searchValue}</when>
		</choose>
	</select>
</mapper>